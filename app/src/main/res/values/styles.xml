<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="backgroundTint">@color/black</item>-->
        <item name="android:windowBackground">@color/layoutBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/dialogBackground</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/dialogBackground</item>
        <item name="android:colorAccent">@color/dialogBackground</item>
        <item name="android:textColorPrimary">@color/nearWhite</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
<!--        <item name="colorPrimaryDark">@color/white</item>-->
<!--        <item name="android:colorPrimaryDark">@color/white</item>-->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="android:colorPrimary">@color/white</item>-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--        <item name="android:textColorHighlight">@color/white</item>-->
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">30sp</item>
    </style>

